// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum serviceName {
  FEDEX
  DHL
  REDPACK
  ESTAFETA
  UPS
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  name     String @unique
}

model Franchise {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  password  String
  name      String    @unique
  ubication String
  cellphone String
  cashiers  Cashier[]
  sales     Sales[]
}

model Cashier {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  email       String     @unique
  password    String
  name        String     @unique
  Franchise   Franchise? @relation(fields: [franchiseId], references: [id])
  franchiseId String?    @db.ObjectId
  Turn        Turn[]
}

model Sales {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  serviceName serviceName
  serviceType String
  Franchise   Franchise?  @relation(fields: [franchiseId], references: [id])
  franchiseId String?     @db.ObjectId
  Turn        Turn?       @relation(fields: [turnId], references: [id])
  turnId      String?     @db.ObjectId
}

model Turn {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  openBalance  Float
  closeBalance Float?
  startTime    DateTime
  endDate      DateTime?
  sales        Sales[]
  cashier      Cashier   @relation(fields: [cashierId], references: [id])
  cashierId    String    @db.ObjectId
}
