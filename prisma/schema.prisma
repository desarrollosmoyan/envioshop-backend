// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum serviceName {
  FEDEX
  DHL
  REDPACK
  ESTAFETA
  UPS
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
  name     String @unique
}

model Franchise {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  password  String
  name      String    @unique
  ubication String
  cellphone String
  cashiers  Cashier[]
  sales     Sales[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Cashier {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  email       String    @unique
  password    String
  name        String    @unique
  franchise   Franchise @relation(fields: [franchiseId], references: [id])
  franchiseId String    @db.ObjectId
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Turn        Turn?
}

model Sales {
  id                  String      @id @default(auto()) @map("_id") @db.ObjectId
  serviceName         serviceName
  serviceType         String
  shipmentPrice       Float
  shipmentPdf         String
  shipmentDescription String
  shipper             Json
  receiver            Json
  franchise           Franchise   @relation(fields: [franchiseId], references: [id])
  franchiseId         String      @db.ObjectId
  Turn                Turn?       @relation(fields: [turnId], references: [id])
  turnId              String?     @db.ObjectId
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
}

model Turn {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  openBalance   Json
  closeBalance  Json?
  startDate     DateTime
  endDate       DateTime?
  sales         Sales[]
  cashier       Cashier?  @relation(fields: [cashierId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  cashierId     String?   @unique @db.ObjectId
  lastCashierId String
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
